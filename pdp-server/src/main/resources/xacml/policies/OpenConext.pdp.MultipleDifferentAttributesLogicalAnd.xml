<?xml version="1.0" encoding="UTF-8"?>
<Policy xmlns="urn:oasis:names:tc:xacml:3.0:core:schema:wd-17"
        PolicyId="http://axiomatics.com/alfa/identifier/OpenConext.pdp.MultipleDifferentAttributesLogicalAnd"
        Version="1"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable">
    <Description>Policy met multiple different attributes AND-ed together
        Medewerkers van de lerarenopleiding in Leiden hebben toegang tot Enquetetool van Leiden
    </Description>
    <PolicyDefaults>
        <XPathVersion>http://www.w3.org/TR/1999/REC-xpath-19991116</XPathVersion>
    </PolicyDefaults>
    <Target>
        <AnyOf>
            <AllOf>
                <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                    <AttributeValue
                            DataType="http://www.w3.org/2001/XMLSchema#string">https://mytimetable-acc.uva.nl</AttributeValue>
                    <AttributeDesignator
                            AttributeId="SPentityID"
                            DataType="http://www.w3.org/2001/XMLSchema#string"
                            Category="urn:oasis:names:tc:xacml:3.0:attribute-category:resource"
                            MustBePresent="false"
                            />
                </Match>
            </AllOf>
        </AnyOf>
        <AnyOf>
            <AllOf>
                <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                    <AttributeValue
                            DataType="http://www.w3.org/2001/XMLSchema#string">http://ststest.windesheim.nl/adfs/services/trust</AttributeValue>
                    <AttributeDesignator
                            AttributeId="IDPentityID"
                            DataType="http://www.w3.org/2001/XMLSchema#string"
                            Category="urn:oasis:names:tc:xacml:3.0:attribute-category:resource"
                            MustBePresent="false"
                            />
                </Match>
            </AllOf>
        </AnyOf>
    </Target>
    <Rule
            Effect="Permit"
            RuleId="http://axiomatics.com/alfa/identifier/OpenConext.pdp.MultipleDifferentAttributesLogicalAnd.permitAccess">
        <Description/>
        <Target>
            <AnyOf>
                <AllOf>
                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                        <AttributeValue
                                DataType="http://www.w3.org/2001/XMLSchema#string">lerarenopleiding</AttributeValue>
                        <AttributeDesignator
                                AttributeId="faculty"
                                DataType="http://www.w3.org/2001/XMLSchema#string"
                                Category="urn:oasis:names:tc:xacml:1.0:subject-category:access-subject"
                                MustBePresent="false"
                                />
                    </Match>
                </AllOf>
            </AnyOf>
            <AnyOf>
                <AllOf>
                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                        <AttributeValue
                                DataType="http://www.w3.org/2001/XMLSchema#string">employee</AttributeValue>
                        <AttributeDesignator
                                AttributeId="urn:mace:dir:attribute-def:eduPersonAffiliation"
                                DataType="http://www.w3.org/2001/XMLSchema#string"
                                Category="urn:oasis:names:tc:xacml:1.0:subject-category:access-subject"
                                MustBePresent="false"
                                />
                    </Match>
                </AllOf>
            </AnyOf>
        </Target>
    </Rule>
    <Rule
            Effect="Deny"
            RuleId="http://axiomatics.com/alfa/identifier/OpenConext.pdp.MultipleDifferentAttributesLogicalAnd.denyAccess">
        <Description/>
        <Target/>
        <AdviceExpressions>
            <AdviceExpression AdviceId="http://example.com/advice/reasonForDeny"
                              AppliesTo="Deny">
                <AttributeAssignmentExpression AttributeId="DenyMessage"
                                               Category="urn:oasis:names:tc:xacml:3.0:attribute-category:resource">
                    <AttributeValue
                            DataType="http://www.w3.org/2001/XMLSchema#string">You are not authorized to access Enquetetool.
                    </AttributeValue>
                </AttributeAssignmentExpression>
            </AdviceExpression>
        </AdviceExpressions>
    </Rule>
</Policy>
